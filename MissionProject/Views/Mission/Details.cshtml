@model MissionProject.Models.Mission

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Mission</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Mutant Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.mutant.MutantName)
        </dd>

        <dt>
            Status
        </dt>

        <dd>
            @Html.DisplayFor(model => model.status.StatusName)
        </dd>

        <dt>
            Mission Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MissionName)
        </dd>
        <dt>
            Assign Date
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AssignDate)
        </dd>

        @if (Model.mutant.ImagePath != null)
        {
            <dd>
                <img src="~/images/profile/@Model.mutant.ImagePath" width="200" height="200" />
            </dd>
        }





    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.MissionId }) |
    @Html.ActionLink("Back to List", "Index")
</p>
